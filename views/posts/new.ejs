<form action="/posts/show" method="post">

<div class="form-group">
  <input type="text"
         name="post[author]"
         placeholder="Author"></br>
</div>

<div class="form-group">
  <input type="text"
         name="post[title]"
         placeholder="Title"></br>
</div>

<div class="form-group">
  <input type="text"
         name="post[content]"
         placeholder="What do you want to say?"></br>
</div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
