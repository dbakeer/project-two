<% posts.forEach(function (posts){ %>



  <div class ="posts">

      <div class = "post-title">

        <a href="/posts/<%= posts.id %>"><%= posts.title %></a></br>

        <h5>Posted by: <%= posts.username %> on <%= posts.date %></h5>

      </div>

      <div class = "post-content">

        <%= posts.content %>
        <br>
            <a href="/posts/<%= posts.id %>" id="commentlink"><%= posts.comments.length %> Comments</a>

      </div>

    <div class = "post-options">


      <div class = "votes">
        <form action="/posts/<%= posts.id %>/upvote?_method=POST"
            method="post">
            <button type="submit" class = "vote">
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"
              id = "plus"></span>
            </button>
        </form>

        <form action="/posts/<%= posts.id %>/downvote?_method=POST"
            method="post">
            <button type="submit" class = "vote">
              <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"
              id = "minus"></span>
            </button>
          </form>

    </div>

        <div id="count">User Rating: <%= posts.vote %></div>





<% if (currentUser === posts.username) { %>

      <form action="/posts/<%= posts.id %>/edit"
            method="patch">

      <input type="submit"
             value="Edit"
             id = "post-edit">
      </form>

      <form action="/posts/<%= posts.id %>?_method=DELETE"
            method="post">
      <input type="submit"
             value="Delete"
             id = "post-edit"></form>
      </form>


    </div>

<% } %>

    </p>

    </div>

    <p>

<% }) %>
