<% posts.forEach(function (posts){ %>



  <div class ="posts">

      <div class = "post-title">

        <a href="/posts/<%= posts.id %>"><%= posts.title %></a></br>

        <div id = "postdeets">Posted by: <%= posts.username %> on <%= posts.date %></div>

      </div>

      <div class = "post-content">

        <%= posts.content %>
        <br>
            <a href="/posts/<%= posts.id %>" id="commentlink"><%= posts.comments.length %> Comments</a>

      </div>

    <div class = "post-options">


      <div class = "votes">
        <form action="/posts/<%= posts.id %>/upvote?_method=POST"
            method="post">
            <button type="submit"
                    class="glyphicon glyphicon-thumbs-up"
                    class="upvote">
            </button>
        </form>

        <form action="/posts/<%= posts.id %>/downvote?_method=POST"
            method="post">
            <button type="submit"
                    class="glyphicon glyphicon-thumbs-down"
                    class="downvote">
            </button>
          </form>

    </div>

        <div class="totalvotes">Rating  :  <%= posts.vote %></div>





<% if (currentUser === posts.username) { %>

      <form action="/posts/<%= posts.id %>/edit"
            method="patch">

      <input type="submit"
             value="Edit"
             id = "post-edit">
      </form>

      <form action="/posts/<%= posts.id %>?_method=DELETE"
            method="post">
      <input type="submit"
             value="Delete"
             id = "post-edit"></form>
      </form>


    </div>

<% } %>

    </p>

    </div>

    <p>

<% }) %>
