<% posts.forEach(function (posts){ %>
  <div class ="posts">
    <p>
      <div class = "post-title">
        <%= posts.title %></br>
        <h5>Posted by: <%= posts.author %> on <%= posts.date %></h5>
      </div>
      <div class = "post-content">
      <%= posts.content %>
    </div>
    <div class = "post-options">


      <form action="/posts/<%= posts.id %>/edit"
            method="patch">
      <input type="submit"
             value="Edit"
             id = "post-edit">
      </form>


      <form action="/posts/<%= posts.id %>?_method=DELETE"
            method="post">
        <input type="submit"
               value="Delete"
               id = "post-edit"></form>
      </form>
    </div>

    </p>
    </div>
<% }) %>
