<form action="/posts/<% = posts._id %>?_method=PATCH" method="post">

<div class="form-group">
  <input type="text"
         name="posts[author]"
         placeholder="Author"
         value ="<%= posts.author %>"></br>
</div>

<div class="form-group">
  <input type="text"
         name="posts[title]"
         placeholder="Title"
         value = "<%= posts.title %>"></br>
</div>

<div class="form-group">
  <input type="text"
         name="posts[content]"
         placeholder="What do you want to say?"
         value = "<%= posts.content %>"></br>
</div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>
