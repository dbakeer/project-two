<form action="/posts/<%= posts.id %>?_method=PATCH" method="post">

<h1>Edit Your Post</h1>

<h4 id = "edituser">Original Author: <%= posts.username %></h4>

<div class="form-group" id = "postedit">
  <h5 id = "edittags">Title</h5>
  <br/>
  <input type="text"
         name="posts[title]"
         placeholder="Title"
         value = "<%= posts.title %>"
         id = "titleedit"></br>
</div>

<h5 id = "edittags">Content</h5>
<br/>
<div class="form-group" id = "postedit" >
  <textarea id = "contentedit"
            name="posts[content]"
            placeholder="Body"
            value = "<%= posts.content %>"><%= posts.content %></textarea>
</br>
</div>

  <button type="submit" class="btn btn-default" id = "editsubmit">Submit</button>
</form>
